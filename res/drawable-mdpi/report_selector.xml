        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray"/>
        </shape>
    </item>
    
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/lightGray"/>
        </shape>
    </item>
    
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/lightMediumGray"/>
        </shape>
    </item>

</selector>
