<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
	android:id="@+id/reportByDateRow" 
	android:layout_height="fill_parent" 
	android:layout_width="fill_parent"
	android:orientation="vertical"
	xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout 
	android:layout_height="wrap_content" 
	android:layout_width="fill_parent"
	android:orientation="horizontal"
	android:weightSum="100">
    
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Title"
		android:gravity="center"
        android:layout_weight="20">
    </TextView>
    
    <View
		 android:layout_height="fill_parent"
		 android:layout_width="2sp"
		 android:background="@color/buttonGray"/>
    
    <TextView
        android:id="@+id/authorText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Author"
        android:gravity="center"
        android:layout_weight="20">
    </TextView>
    
    <View
		 android:layout_height="fill_parent"
		 android:layout_width="2sp"
		 android:background="@color/buttonGray"/>
    
    <TextView
        android:id="@+id/callNumberText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Call Number"
        android:gravity="center"
        android:layout_weight="20">
    </TextView>
    
    <View
		 android:layout_height="fill_parent"
		 android:layout_width="2sp"
		 android:background="@color/buttonGray"/>
    
    <TextView
        android:id="@+id/publishYearText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Publish Year"
        android:gravity="center"
        android:layout_weight="20">
    </TextView>
    
    <View
		 android:layout_height="fill_parent"
		 android:layout_width="2sp"
		 android:background="@color/buttonGray"/>
    
    <TextView
        android:id="@+id/checkoutCountText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Checkout Count"
        android:gravity="center"
        android:layout_weight="20">
    </TextView>
    
    </LinearLayout>
    
    <View
		 android:layout_height="2sp"
		 android:layout_width="fill_parent"
		 android:background="@color/buttonGray"/>
    
</LinearLayout>